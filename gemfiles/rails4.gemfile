source :rubygems

gem 'rails', '~> 4'

gem "bundler", ">= 1.3.0"
gem "rake"
gem 'tzinfo'
gem 'mocha'
gem 'pry'
gem 'responders', '~> 2.0' # to support Rails 4.2
gem 'stripe'
gem 'stripe-ruby-mock', '~> 2.4'

group :test do
  gem 'simplecov', require: false
  gem 'webmock'
  gem 'puma'                # required for system tests
  gem 'capybara'            # ditto
  gem "selenium-webdriver"  # ditto
  gem 'chromedriver-helper' # ditto
end